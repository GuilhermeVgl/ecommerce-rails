<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Extras" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Extras</h1>
    <%= link_to "New extra", new_admin_extra_path, class: "rounded-lg py-3 px-5 primary-purple-bg text-white block font-medium" %>
  </div>

  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto rounded-xl">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-gray-800 border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Name
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Price
                </th>
              </tr>
            </thead>
            <tbody>
              <% @admin_extras.each.each do |a| %>
                <tr class="bg-gray-50 border-b">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800 underline">
                    <%= link_to a.name, edit_admin_extra_path(a) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                    R$<%= a.price %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

