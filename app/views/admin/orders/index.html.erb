<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h2 class="font-bold">Unfulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto rounded-xl">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-gray-800 border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Order Id
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Customer Email
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  total
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  address
                </th>
              </tr>
            </thead>
            <tbody>
              <% @not_fulfilled_orders.each do |o| %>
                <tr class="bg-gray-50 border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800 underline">
                        <%= link_to o.id, [:admin, o] %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        <%= o.customer_email %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        R$<%= (o.total).to_s %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        <%= o.address %>
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <h2 class="font-bold">Fulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <div class="overflow-x-auto rounded-xl">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-gray-800 border-b">
              <tr>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Order Id
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  Customer Email
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  total
                </th>
                <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                  address
                </th>
              </tr>
            </thead>
            <tbody>
              <% @fulfilled_orders.each do |o| %>
                <tr class="bg-gray-50 border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800 underline">
                        <%= link_to o.id, [:admin, o] %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        <%= o.customer_email %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        R$<%= (o.total).to_s %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-fray-800">
                        <%= o.address %>
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
